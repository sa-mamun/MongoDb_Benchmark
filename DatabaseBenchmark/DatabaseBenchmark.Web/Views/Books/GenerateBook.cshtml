@model DatabaseBenchmark.Web.Models.GenerateBookVM
@using DatabaseBenchmark.Core.Entity
@{
    ViewBag.Title = "Generate Book";
    string startTime = ViewBag.StartTime;
    string endTime = ViewBag.EndTime;
    string duration = ViewBag.Duration;
    List<RootBook> books = ViewBag.RootBookList;
}

<div id="content">
    <div class="container-fluid" style="width:100%;">
        <!-- Page Heading -->
        <div>
            <h1 class="h3 mb-4 text-gray-800">Enter no of Books</h1>
            <hr />
        </div>
        <div class="mb-5">
            @using (Html.BeginForm("GenerateBook", "Books", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group row">
                    <div class="col-md-3">
                        @Html.LabelFor(m => m.TotalNoOfBooks)
                    </div>
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.TotalNoOfBooks, new { @type = "number", @class = "form-control", dir = "rtl", min = "0", oninput = "validity.valid||(value='');"})
                        @Html.ValidationMessageFor(m => m.TotalNoOfBooks, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-8">
                        <input type="submit" class="btn btn-primary" id="btn_submit" value="Save"/>
                    </div>
                </div>
            }
        </div>
        @if (books != null)
        {
            <div class="mt-5">
                <h1 class="h3 mb-2 mt-5 text-gray-800">Time Information</h1>
                <div class="container">
                    <div class="row">
                    <div class="col-sm">
                        Start Time: @startTime
                    </div>
                    <div class="col-sm">
                        End Time: @endTime
                    </div>
                    <div class="col-sm">
                        Duration: @duration
                    </div>
                    </div>
                </div>
                <hr />
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Book Information</h6>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
